<Window x:Class="WIn11_Info.domainCredentials"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WIn11_Info"
        mc:Ignorable="d"
        Title="domainCredentials" Height="190" Width="234">
    <Grid Margin="0,0,0,-6">
        <Label Content="Domain name:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="87"/>
        <TextBox x:Name="txtBoxDomainName" Margin="102,14,12,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <Label Content="UserName:" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top" Width="87"/>
        <Label Content="Password:" HorizontalAlignment="Left" Margin="10,72,0,0" VerticalAlignment="Top" Width="87"/>
        <TextBox x:Name="txtBoxUserName" Margin="102,49,12,0" TextWrapping="Wrap" VerticalAlignment="Top" TextChanged="txtBoxUserName_TextChanged"/>
        <PasswordBox x:Name="passwordBoxCredentials" Margin="102,76,12,0" VerticalAlignment="Top"/>
        <Button x:Name="btnCredentialsOk" Content="OK" Margin="42,120,122,0" VerticalAlignment="Top" Click="Button_Click"/>
        <Button x:Name="btnCredentialsCancel" Content="Cancel" Margin="122,120,42,0" VerticalAlignment="Top" Click="btnCredentialsCancel_Click"/>


    </Grid>
</Window>
