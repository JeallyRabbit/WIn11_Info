<Window x:Class="WIn11_Info.lastUserForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WIn11_Info"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Window1" Height="150" Width="250">
    <Grid>
        <Label Content="Username:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="90"/>
        <Label Content="Domain Name:" HorizontalAlignment="Left" Margin="10,32,0,0" VerticalAlignment="Top" Width="90"/>
        <TextBox x:Name="txtBoxUserName" HorizontalAlignment="Left" Margin="100,14,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtBoxDomainName" HorizontalAlignment="Left" Margin="100,37,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <CheckBox Content="User on local system" HorizontalAlignment="Center" Height="17" Margin="0,62,0,0" VerticalAlignment="Top" Width="134" Checked="CheckBox_Checked"/>
        <Button x:Name="btnOK" Content="OK" HorizontalAlignment="Left" Margin="55,84,0,0" VerticalAlignment="Top" Height="26" Width="55" Click="btnOK_Click"/>
        <Button x:Name="btnCancel" Content="Cancel" HorizontalAlignment="Left" Margin="137,84,0,0" VerticalAlignment="Top" Height="26" Width="55" Click="Button_Click"/>

    </Grid>
</Window>
