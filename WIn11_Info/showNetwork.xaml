<Window x:Class="WIn11_Info.showNetwork"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WIn11_Info"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Network" Height="180" Width="550">
    <Grid>
        <Label x:Name="lblIP" Content="Ip:" HorizontalAlignment="Center" HorizontalContentAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Height="25" Width="530"/>
        <Label x:Name="lblMacLan" Content="Mac LAN:" HorizontalAlignment="Center" HorizontalContentAlignment="Center" Margin="0,35,0,0" VerticalAlignment="Top" Height="25" Width="530"/>
        <Label x:Name="lblMacWlan" Content="Mac WLAN:" HorizontalAlignment="Center" HorizontalContentAlignment="Center" Margin="0,60,0,0" VerticalAlignment="Top" Height="25" Width="530"/>
        <Label x:Name="lblDhcpLan" Content="DHCP Lan:" HorizontalAlignment="Center"  Margin="0,85,0,0" VerticalAlignment="Top" Height="25" Width="530" PreviewMouseLeftButtonDown="lblDhcpLan_myClick" MouseEnter="lblDhclLanMouseEnter" MouseLeave="lblDhclLanMouseLeave"/>
        <Label x:Name="lblDhcpWlan" Content="DHCP Wlan:" HorizontalAlignment="Center"  Margin="0,110,0,0" VerticalAlignment="Top" Height="25" Width="530" PreviewMouseLeftButtonDown="lblDhcpWlan_myClick" MouseEnter="lblDhclWlanMouseEnter" MouseLeave="lblDhcpWlanMouseLeave"/>
    </Grid>
</Window>
